{
  "name": "pcomm",
  "version": "1.0.0",
  "description": "Communications platform",
  "scripts": {
    "start": "node app/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean-public": "rm -rf compiled public",
    "clean-js": "rm -rf compiled public/js",
    "clean-css": "rm -rf public/css/index*.css",
    "clean-css-external": "rm -rf public/css/external*.css",
    "clean-server": "rm -rf app",
    "clean-views": "rm -rf public/views",
    "eslint": "eslint src/app src/public/js",
    "babel-app": "babel src/app -d app",
    "copy-external": "cp bower_components/angular/angular.js bower_components/angular-route/angular-route.js bower_components/jquery/dist/jquery.js bower_components/bootstrap/dist/js/bootstrap.js bower_components/sweetalert/dist/sweetalert-dev.js bower_components/swal-forms/swal-forms.js bower_components/bootstrap/dist/js/bootstrap.js public/src/external/; cp bower_components/font-awesome/fonts/* public/fonts",
    "copy-js": "cp -r src/public/js public/src/js",
    "copy-css": "cp -r src/public/css public/src/css",
    "copy-public": "cp -r src/public/static/* public/",
    "ngtemplates": "ngtemplates public/views public/src/js/lib/templates.js -b \"export default (ngApp) => ngApp.run(['$templateCache', ($templateCache) => {%SCRIPT%}]);\"",
    "browserify": "browserify -d -t babelify public/src/js/index.js | exorcist -b public -r public public/js/index.js.map > public/js/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dandart/pcomm.git"
  },
  "keywords": [
    "comms",
    "communications",
    "facebook",
    "twitter"
  ],
  "author": "Dan Dart <github@dandart.co.uk>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/dandart/pcomm/issues"
  },
  "homepage": "https://github.com/dandart/pcomm#readme",
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "babel-plugin-syntax-async-functions": "^6.3.13",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.10.3",
    "babel-preset-stage-0": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "browserify-shim": "^3.8.10",
    "exorcist": "^0.4.0"
  },
  "dependencies": {
    "body-parser": "^1.14.1",
    "client-sessions": "^0.7.0",
    "es6-promisify": "^3.0.0",
    "express": "^4.13.3",
    "fb": "^0.7.3",
    "feedparser": "^1.1.4",
    "moment": "^2.11.2",
    "mongoose": "^4.2.3",
    "node-xmpp-client": "^3.0.0",
    "passport": "^0.3.0",
    "passport-facebook": "^2.0.0",
    "passport-github": "^1.0.0",
    "passport-google-oauth": "^0.2.0",
    "passport-linkedin": "^1.0.0",
    "passport-statusnet": "^0.1.0",
    "passport-steam": "^0.1.6",
    "passport-twitter": "^1.0.3",
    "passport-yahoo-oauth": "^0.1.2",
    "password-hash": "^1.2.2",
    "request": "^2.69.0",
    "simple-imap-inbox": "^0.1.8",
    "smtp-connection": "^1.3.1",
    "socket.io": "^1.3.7",
    "socket.io-client": "^1.3.7",
    "twitter": "^1.2.5"
  }
}
