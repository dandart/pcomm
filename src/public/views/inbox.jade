.row
    .col-lg-2
        .row
            button.btn.btn-success.col-lg-12
                i.fa.fa-pencil(title='Compose')
                span.hidden-sm &nbsp; Compose
        .row &nbsp;
        .nav.nav-pills.nav-stacked
            li.active
                a(href="#")
                    i.fa.fa-envelope
                    span.hidden-sm &nbsp; Inbox
            li
                a(href="#")
                    i.fa.fa-pencil
                    span.hidden-sm &nbsp; Drafts
            li
                a(href="#")
                    i.fa.fa-envelope
                    span.hidden-sm &nbsp; Sent Mail
            li
                a(href="#")
                    i.fa.fa-archive
                    span.hidden-sm &nbsp; Archive
            li
                a(href="#")
                    i.fa.fa-envelope
                    span.hidden-sm &nbsp; All Mail
            li
                a(href="#") 
                    i.fa.fa-warning
                    span.hidden-sm &nbsp; Spam
            li
                a(href="#")
                    i.fa.fa-trash
                    span.hidden-sm &nbsp; Recycling
            li
                a(href="#")
                    i.fa.fa-envelope
                    span.hidden-sm &nbsp; Email
            li
                a(href="#")
                    i.fa.fa-facebook
                    span.hidden-sm &nbsp; Facebook
            li
                a(href="#")
                    i.fa.fa-twitter
                    span.hidden-sm &nbsp; Twitter
                
            li(ng-foreach="folders")
                a(href="#") {{ name }}
    .col-lg-10
        row
            .col-lg-12
                button.btn.btn-default.col-lg-2
                    i.fa.fa-archive
                    span.hidden-sm &nbsp; Archive
                button.btn.btn-default.col-lg-2
                    i.fa.fa-warning
                    span.hidden-sm &nbsp; Spam
                button.btn.btn-default.col-lg-2
                    i.fa.fa-envelope
                    span.hidden-sm &nbsp; Mark as Read
                
        table.messages.table.table-striped.table-hover
            thead
                tr
                    th
                        input.select-all(type='checkbox')
                    th From
                    th Subject
                    th Date
            tbody
                tr(ng-repeat='row in tableRows')
                    td
                        input(type='checkbox')
                    td(ng-click='select(row.id)') {{row.from}}
                    td(ng-click='select(row.id)') {{row.subject}}
                    td(ng-click='select(row.id)') {{row.date}}
