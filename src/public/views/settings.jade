        .row
            h4 Connected Accounts
            .panel.panel-default
                table.table.table-striped
                    thead
                        tr
                            th &nbsp;
                            th Network
                            th Name
                            th Remove?
                    tbody
                        tr(ng-repeat='(id, row) in networks')
                            td
                                i(ng-class="'fa fa-'+(('email'==row.type)?'envelope':row.type)")
                            td {{ row.type }}
                            td {{ row.name }}
                            td
                                a(href='',ng-click="delete(id)")
